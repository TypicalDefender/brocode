packages = ["openssl", "pkg-config"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Rust Compiler"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "rust_build_and_test"

[[workflows.workflow]]
name = "Rust Compiler"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cargo build && echo \"Build complete. You can now use the CLI tool with: ./target/debug/brocode\""

